  <style>
    :root {
      --bg: #0f172a;
      --card: #1e293b;
      --text: #f9fafb;
      --accent: #fbbf24;
      --link: #38bdf8;
      --muted: #94a3b8;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg);
      color: var(--text);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 2rem;
    }

    .container {
      max-width: 960px;
      background-color: var(--card);
      border-radius: 1.5rem;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
      padding: 3rem;
      animation: fadeIn 1s ease-in-out;
    }

    nav {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
    }

    nav a {
      color: var(--link);
      font-weight: 500;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    nav a:hover {
      color: var(--accent);
    }

    h1 {
      font-size: 2.5rem;
      text-align: center;
      color: var(--accent);
      margin-bottom: 2rem;
    }

    h2.section-title {
      font-size: 1.5rem;
      color: var(--accent);
      margin-top: 2rem;
      margin-bottom: 0.5rem;
    }

    ul.info-list {
      list-style: none;
      padding-left: 0;
      margin-bottom: 1rem;
      color: var(--muted);
    }

    ul.info-list li {
      margin-bottom: 0.5rem;
    }

    .highlight {
      color: var(--link);
      font-weight: 600;
      text-decoration: none;
    }

    .highlight:hover {
      color: var(--accent);
    }

    p {
      color: var(--muted);
      margin-bottom: 1rem;
      font-size: 1rem;
    }

    form {
      margin-top: 1rem;
      display: grid;
      gap: 1rem;
    }

    input, textarea {
      width: 100%;
      padding: 0.75rem;
      border-radius: 0.5rem;
      background-color: #334155;
      color: var(--text);
      border: 1px solid #475569;
      font-size: 1rem;
    }

    input::placeholder, textarea::placeholder {
      color: #94a3b8;
    }

    button {
      background-color: var(--accent);
      color: var(--bg);
      font-weight: bold;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #fde68a;
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 2rem;
      color: var(--link);
      font-weight: 500;
      text-decoration: none;
    }

    .back-link:hover {
      color: var(--accent);
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 600px) {
      .container {
        padding: 2rem;
      }

      h1 {
        font-size: 2rem;
      }

      h2.section-title {
        font-size: 1.25rem;
      }
    }
  </style>
</head>
